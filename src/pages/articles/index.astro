---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ArticleCard from '../../components/ArticleCard.astro';

const allArticles = await getCollection('articles', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

const articles = allArticles.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const authors = await getCollection('authors');
const authorMap = new Map(authors.map((a) => [a.id, a.data.name]));
---

<BaseLayout
  title="All Articles | Agent Management Forum"
  description="Browse all articles about AI agent management, orchestration, and governance."
>
  <h1 class="mb-8 text-3xl font-bold tracking-tight text-[var(--color-text-primary)]">
    All Articles
  </h1>
  <div class="space-y-6">
    {articles.map((article) => (
      <ArticleCard
        article={article}
        authorName={authorMap.get(article.data.author.id) ?? 'Unknown'}
      />
    ))}
  </div>
</BaseLayout>
