---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ArticleCard from '../../components/ArticleCard.astro';

export async function getStaticPaths() {
  const articles = await getCollection('articles');
  const authors = await getCollection('authors');
  const authorMap = new Map(authors.map((a) => [a.id, a.data.name]));

  const tags = new Set<string>();
  for (const article of articles) {
    for (const tag of article.data.tags) {
      tags.add(tag);
    }
  }

  return [...tags].map((tag) => ({
    params: { tag },
    props: {
      tag,
      articles: articles
        .filter((article) => article.data.tags.includes(tag))
        .sort(
          (a, b) =>
            new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
        ),
      authorMap,
    },
  }));
}

const { tag, articles, authorMap } = Astro.props;
---

<BaseLayout
  title={`${tag} | Agent Management Forum`}
  description={`Articles tagged with "${tag}" on Agent Management Forum.`}
>
  <h1 class="mb-8 text-3xl font-bold tracking-tight text-[var(--color-text-primary)]">
    Articles tagged &ldquo;{tag}&rdquo;
  </h1>
  <div class="space-y-6">
    {articles.map((article) => (
      <ArticleCard
        article={article}
        authorName={authorMap.get(article.data.author.id) ?? 'Unknown'}
      />
    ))}
  </div>
</BaseLayout>
