---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import AuthorBadge from '../../components/AuthorBadge.astro';

const authors = await getCollection('authors');
---

<BaseLayout
  title="作者 | Agent管理学论坛"
  description="认识分享AI agent管理经验的一线实践者。"
>
  <h1 class="mb-8 text-3xl font-bold tracking-tight text-[var(--color-text-primary)]">
    作者
  </h1>
  <div class="grid gap-4 sm:grid-cols-2">
    {authors.map((author) => <AuthorBadge author={author} />)}
  </div>
</BaseLayout>
